{% extends 'base.html.twig' %}

{% block title %}Hello AlquileresController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="row">
        <div class="col"><h2>Alquileres</h2></div>
        <div class="col">
            <a href="{{path('app_alquileres_create')}}" class="btn btn-primary">Nuevo alquiler</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Valor total</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Dias Alquiler</th>
                <th>Usuario</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                {% for alquiler in listAlquileres %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ alquiler.valorTotal }}</td>
                        <td>{{ alquiler.fechaInicio |date('Y-m-d H:i:s')}}</td>
                        <td>{{ alquiler.fechaFin |date('Y-m-d H:i:s')}}</td>
                        <td>{{ alquiler.diasAlquiler }}</td>
                        <td>{{ alquiler.fullName }}</td>

                        <td>
                            <a href="{{path('app_alquileres_update', {'id': alquiler.id})}}" class="btn btn-primary">Modificar</a>
                            <a href="{{path('app_alquileres_delete', {'id': alquiler.id})}}" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                {% endfor %}
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
